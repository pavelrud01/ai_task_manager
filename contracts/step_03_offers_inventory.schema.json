{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Offers Inventory",
  "type": "object",
  "properties": {
    "offers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["quantitative","qualitative","social_proof","risk_reducer","urgency","process"] },
          "text": { "type": "string" },
          "strength": { "type": "number", "minimum": 1, "maximum": 5 }
        },
        "required": ["type","text","strength"]
      }
    }
  },
  "required": ["offers"]
}
