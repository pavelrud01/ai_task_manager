{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "type":"object",
  "required":["product","audience","sales","channels","region"],
  "properties":{
    "product":{
      "type":"object",
      "required":["name","offers","price_ranges"],
      "properties":{
        "name":{"type":"string"},
        "offers":{"type":"array","items":{"type":"string"}},
        "price_ranges":{"type":"array","minItems":2,"maxItems":2,"items":{"type":"number"}}
      }
    },
    "audience":{
      "type":"array",
      "minItems":1,
      "items":{"type":"object","required":["persona","child_age","needs"],
        "properties":{
          "persona":{"type":"string"},
          "child_age":{"type":"string"},
          "needs":{"type":"array","items":{"type":"string"}}
        }}
    },
    "sales":{
      "type":"object",
      "required":["trial_format","sla_minutes"],
      "properties":{
        "trial_format":{"type":"string"},
        "sla_minutes":{"type":"integer","minimum":1}
      }
    },
    "channels":{"type":"array","items":{"type":"string"}},
    "region":{"type":"string"}
  }
}
