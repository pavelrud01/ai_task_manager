{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Guide Index Schema v1.1",
  "type": "object",
  "required": ["meta", "sections", "sources"],
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "title",
        "purpose",
        "audience",
        "persona_types",
        "products",
        "interview_mode",
        "min_sessions",
        "max_sessions",
        "allow_followups",
        "version",
        "last_updated"
      ],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "purpose": { "type": "string", "minLength": 1 },
        "audience": { "type": "string", "minLength": 1 },
        "persona_types": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "products": { "type": "array", "items": { "type": "string" }, "minItems": 0 },
        "interview_mode": { "type": "string", "enum": ["simulate", "external"] },
        "min_sessions": { "type": "integer", "minimum": 0 },
        "max_sessions": { "type": "integer", "minimum": 0 },
        "allow_followups": { "type": "boolean" },
        "version": { "type": "string" },
        "last_updated": { "type": "string" }
      },
      "additionalProperties": true
    },
    "sections": {
      "type": "object",
      "required": [
        "Intro",
        "Definitions",
        "Inputs & Preconditions",
        "Process",
        "Core Questions / Templates",
        "Deepening (5 Whys)",
        "Branching Rules",
        "Evidence Tags",
        "Output Contract Hints",
        "Safety & Ethics",
        "Stop Conditions",
        "Quality Checklist",
        "Red Flags",
        "Acceptance Criteria",
        "No-Gaps Protocol",
        "Self-Review & Reflection",
        "Versions & Changelog"
      ],
      "additionalProperties": true
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256"],
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
