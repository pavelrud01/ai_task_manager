{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Decision Mapping Output Schema v2",
  "type": "object",
  "properties": {
    "journey": {
      "type": "object",
      "properties": {
        "b2c": {
          "type": "object",
          "properties": {
            "stages": {
              "type": "array",
              "items": { "$ref": "#/$defs/Stage" }
            },
            "gaps": {
              "type": "array",
              "items": { "$ref": "#/$defs/Gap" }
            }
          },
          "required": ["stages", "gaps"]
        }
      },
      "required": ["b2c"]
    }
  },
  "required": ["journey"],
  "$defs": {
    "EvidenceRef": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "pattern": "^E-[A-Za-z0-9_-]{4,}$" },
        "source_type": { "type": "string", "enum": ["interview", "review", "crm", "support", "web", "experiment"] },
        "source_doc": { "type": "string" },
        "locator": { "type": "string" },
        "quote": { "type": "string", "minLength": 5 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "tags": { "type": "array", "items": { "type": "string" }, "minItems": 1 }
      },
      "required": ["id", "source_type", "quote", "confidence"]
    },
    "Stage": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "content_present": { "type": "boolean" },
        "notes": { "type": "string" }
      },
      "required": ["name", "content_present"]
    },
    "Gap": {
      "type": "object",
      "properties": {
        "stage": { "type": "string" },
        "missing_content": { "type": "string" },
        "priority": { "type": "integer", "minimum": 1, "maximum": 5 },
        "evidence_refs": {
          "type": "array",
          "items": { "$ref": "#/$defs/EvidenceRef" },
          "minItems": 1
        }
      },
      "required": ["stage", "missing_content", "priority", "evidence_refs"]
    }
  }
}
