{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Segments Output Schema v2",
  "type": "object",
  "properties": {
    "segments": {
      "type": "array",
      "items": { "$ref": "#/$defs/Segment" },
      "minItems": 1
    }
  },
  "required": ["segments"],
  "$defs": {
    "EvidenceRef": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "pattern": "^E-[A-Za-z0-9_-]{4,}$" },
        "source_type": { "type": "string", "enum": ["interview", "review", "crm", "support", "web", "experiment"] },
        "source_doc": { "type": "string" },
        "locator": { "type": "string" },
        "quote": { "type": "string", "minLength": 5 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "tags": { "type": "array", "items": { "type": "string" }, "minItems": 1 }
      },
      "required": ["id", "source_type", "quote", "confidence"]
    },
    "Segment": {
      "type": "object",
      "properties": {
        "segment_id": { "type": "string", "pattern": "^S-[A-Za-z0-9_-]{4,}$" },
        "segment_name": { "type": "string", "minLength": 3 },
        "priority": { "type": "integer", "minimum": 1, "maximum": 5 },
        "primary_fear": { "type": "string" },
        "desire": { "type": "string" },
        "jtbd_links": {
          "type": "array",
          "items": { "type": "string", "pattern": "^J-[A-Za-z0-9_-]{4,}$" }
        },
        "lexicon": {
          "type": "array",
          "items": { "type": "string" }
        },
        "tags": { "type": "array", "items": { "type": "string" } },
        "evidence_refs": {
          "type": "array",
          "items": { "$ref": "#/$defs/EvidenceRef" },
          "minItems": 1
        }
      },
      "required": ["segment_id", "segment_name", "priority", "evidence_refs"]
    }
  }
}
